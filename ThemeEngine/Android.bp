android_app {
    name: "ThemeEngine",
    package_name: "io.github.dot166.themeengine",

    resource_dirs: ["src/main/res"],

    srcs: [
        "src/main/java/**/*.kt",
        "src/main/java/**/*.java",
    ],

    manifest: "src/main/AndroidManifest.xml",

    static_libs: [
        "j.Lib",
        "io_github_dot166_themeengine_flags_lib",
    ],

    kotlincflags: ["-Xjvm-default=all"],
    aaptflags: ["--auto-add-overlay"],
}
