    <style name="TextAppearance.Holo.Widget.Switch" parent="android:TextAppearance.Holo.Small">
        <!-- Switch thumb asset presents a dark background. -->
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="j.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="track">@drawable/j_switch_track_holo_dark</item>
        <item name="android:track">@drawable/j_switch_track_holo_dark</item>
        <item name="android:thumb">@drawable/j_switch_inner_holo_dark</item>
        <item name="android:switchTextAppearance">@style/TextAppearance.Holo.Widget.Switch</item>
        <item name="switchTextAppearance">@style/TextAppearance.Holo.Widget.Switch</item>
        <item name="android:background">@null</item>
        <item name="android:showText">true</item>
        <item name="android:switchPadding">16dip</item>
        <item name="android:thumbTextPadding">12dip</item>
        <item name="android:switchMinWidth">96dip</item>
        <item name="showText">true</item>
        <item name="switchPadding">16dip</item>
        <item name="thumbTextPadding">12dip</item>
        <item name="switchMinWidth">96dip</item>
        <item name="android:textOn">@string/abc_capital_on</item>
        <item name="android:textOff">@string/abc_capital_off</item>
    </style>

    <style name="j.Button" parent="android:Widget.Holo.Button">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="j.Button.icon">
        <item name="android:minWidth">@dimen/m3_btn_icon_only_min_width</item>
        <item name="android:paddingLeft">@dimen/m3_btn_icon_only_default_padding</item>
        <item name="android:paddingRight">@dimen/m3_btn_icon_only_default_padding</item>
        <item name="android:paddingTop">@dimen/m3_btn_icon_only_default_padding</item>
        <item name="android:paddingBottom">@dimen/m3_btn_icon_only_default_padding</item>
        <item name="android:insetLeft">@dimen/m3_btn_inset</item>
        <item name="android:insetRight">@dimen/m3_btn_inset</item>
        <item name="iconSize">@dimen/m3_btn_icon_only_default_size</item>
        <item name="iconPadding">@dimen/m3_btn_icon_only_icon_padding</item>
    </style>

    <style name="j.tab" parent="Widget.Design.TabLayout">
        <item name="android:background">?android:panelBackground</item>
    </style>

    <style name="j.BottomNav" parent="@style/Widget.MaterialComponents.BottomNavigationView">
