<resources>

    <!-- Dialog Things -->
    <style name="ThemeOverlay.j.Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:colorBackground">#80000000</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:buttonBarButtonStyle">?buttonStyle</item>
        <item name="buttonBarButtonStyle">?buttonStyle</item>
    </style>

    <style name="ThemeOverlay.j.Dialog.Alert.Framework" parent="ThemeOverlay.Material3.Dialog.Alert.Framework">
        <item name="android:colorBackground">#80000000</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:buttonBarButtonStyle">?buttonStyle</item>
