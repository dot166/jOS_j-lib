<resources>
    <!-- Base System theme. -->
    <style name="j.Theme" parent="Theme.Material3Expressive.DayNight.NoActionBar">
        <item name="viewInflaterClass">io.github.dot166.jlib.app.jLibViewInflater</item>
        <item name="android:selectableItemBackgroundBorderless">?android:attr/selectableItemBackground</item>
        <!-- Used by MediaRouter -->
        <item name="android:borderlessButtonStyle">?android:buttonStyle</item>
        <!-- Button styles -->
        <item name="android:buttonBarButtonStyle">?attr/borderlessButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">?buttonBarButtonStyle</item>

        <!-- AppCompat Attributes -->
        <item name="borderlessButtonStyle">?materialButtonStyle</item>
        <!-- Button styles -->
        <item name="buttonStyle">?materialButtonStyle</item>
        <item name="buttonBarButtonStyle">?attr/borderlessButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">?buttonBarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">?buttonBarButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">?buttonBarButtonStyle</item>
        <item name="cardViewStyle">?materialCardViewStyle</item>
        <item name="sliderStyle">@style/j.slider</item>
    </style>

    <style name="j.Theme.PlatLogo">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
